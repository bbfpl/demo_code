.up_upload-btn .up_add-text {
  color: #f46658;
  vertical-align: middle;
  font-size: 32rpx;
}

.up_img-list {
  padding: 24rpx 0 8rpx 44rpx;
  height: 172rpx;
}

.up_img-list .up-single-img {
  display: inline-block;
  position: relative;
  height: 172rpx;
}

.up_img-list .up-single-img:last-child {
  margin-left: 30rpx;
}

.up_img-list .up_thumb-img {
  display: inline-block;
  width: 272rpx;
  height: 176rpx;
}

.up_img-list .up_icon-close {
  position: absolute;
  top: 0;
  right: 0;
  width: 52rpx;
  height: 42rpx;
}
