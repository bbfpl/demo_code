.save {
  height: 96rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  border-radius: 48rpx;
  outline: none;
  border: 2px solid;
  display: inline-block;
  width: calc((100% - 40rpx) / 2);
  background: #000;
  color: #fff;
  border-color: #000;
}

.change-avatar-box .save.disabled {
  background: #ccc;
  border-color: #ccc;
}

.up_upload-btn {
  height: 44rpx;
  line-height: 44rpx;
}

