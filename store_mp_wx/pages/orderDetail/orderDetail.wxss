/* pages/orderDetail/orderDetail.wxss */
@import "../../lib/style/golbal.wxss";
@import "../../lib/style/h5.wxss";

.order-detail-page {
  padding-bottom: 100px;
}

.order-detail-page .h1 {
  width: 100%;
}

.order-detail-page .h1 text {
  font-weight: 400;
  font-size: 20px;
}

.order-detail-page .h1 .status {
  font-size: 14px;
  color: #fff;
  background-color: #d0b07a;
  border-radius: 18px;
  padding: 14px 10px;
  line-height: 0;
}

.order-list {
  width: 100%;
  margin-top: 20px;
}

.order-info-text {
  width: 100%;
}

.order-info-text .order-info-text-p {
  color: #000;
  font-size: 14px;
  margin-bottom: 20px;
}

.order-info-text .order-info-text-t1 {
  font-weight: 500;
  margin-right: 20px;
}

.order-info-text .order-info-text-t2 {
  font-weight: 300;
}

.user-order-detail-btn {
  margin-bottom: 20px;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.user-order-detail-btn .button {
  display: block;
}
