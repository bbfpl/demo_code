  font-size: 14px;
  margin-right: 5px;
}

.detail-content{
  text-align: center;
}
.detail-content .wxParse-p{
  margin-bottom: 20px;
}
.detail-content .wxParse-p image{
  display: block;
}
.d-btns {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 9;
  left: 0;
}
.d-btns .space{
  padding: 20px;
}