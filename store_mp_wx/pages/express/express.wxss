/* pages/express/express.wxss */
@import "../../lib/style/golbal.wxss";
@import "../../lib/style/h5.wxss";

/*用户-订单-物流*/
.user-order-express-panel h1 {
  margin-top: 20px;
  margin-bottom: 30px;
}
.user-order-express-panel .export-item {
  margin-bottom: 20px;
  min-height: 52px;
}
.user-order-express-panel .export-item .export-item-time{
  width: 46px;
}
.user-order-express-panel .export-item .export-item-time text {
  text-align: right;
  color: #666;
  line-height: 16px;
  display:block;
}
.user-order-express-panel .export-item .export-item-time text:nth-child(1) {
  font-size: 14px;
  margin-top: 4px;
}
.user-order-express-panel .export-item .export-item-time text:nth-child(2) {
  font-size: 12px;
}
.user-order-express-panel .export-item .export-item-text {
  font-size: 16px;
  color: #666;
  font-weight: 300;
}
.user-order-express-panel .export-item .export-item-icon {
  padding: 0 10px;
}
.user-order-express-panel .export-item .export-item-icon text {
  position: relative;
  display: block;
}
.user-order-express-panel .export-item .export-item-icon text:before {
  content: " ";
  width: 12px;
  height: 12px;
  background-color: #ccc;
  display: block;
  -webkit-transform: rotate(45deg);
      -ms-transform: rotate(45deg);
          transform: rotate(45deg);
  position: relative;
  z-index: 1;
  top: 8px;
}
.user-order-express-panel .export-item .export-item-icon text:after {
  content: " ";
  width: 2px;
  height: 45px;
  display: block;
  background-color: #F7F7F7;
  position: absolute;
  left: 5px;
  top: 28px;
  z-index: 0;
}
.user-order-express-panel .export-item:first-child .export-item-time text {
  color: #000;
}
.user-order-express-panel .export-item:first-child .export-item-text {
  color: #000;
  font-weight: 500;
}
.user-order-express-panel .export-item:first-child .export-item-icon text:before {
  background-color: #D0B07A;
}
.user-order-express-panel .export-item:last-child .export-item-icon text:after {
  height: 0;
}