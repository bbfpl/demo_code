/**app.wxss**/
button::after {
  border: none;
}

input {
  outline: none;
  border: none;
  list-style: none;
  border-radius: 0;
}

.text-center {
  text-align: center;
}

.pull-right {
  float: right;
}

.app_btn-black {
  background: black;
  color: white;
  font-size: 28rpx;
}

.app_btn-big {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 96rpx;
}

.app_input {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #000;
  border-bottom: 2px solid #ccc;
  outline: none;
  caret-color: #d0b07a;
}

.app_input.active {
  border-color: #000;
}

.app_input::-webkit-input-placeholder {
  color: #d0b07a;
}

.app_input:-moz-placeholder {
  color: #ccc;
}

.app_input::-moz-placeholder {
  color: #ccc;
}

.app_input:-ms-input-placeholder {
  color: #ccc;
}